<% if @range == "User" %>
    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
           <th>Introduction</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
         <% @users.each do |user| %>  
         <tr>
             <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
             <td><%= user.name %></td>
             <td><%= user.introduction %></td>
         </tr>
        <% end %>
      </tbody>
  </table>
  
<% else %>

    <table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
       <tr>
         <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
     </tr>
    <% end %>
  </tbody>
  </table>
  <% end  %>
   
    
    


