   <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
    <table class="table">
       <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
       <tr>
           <% @users.each do |user| %>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td>フォーロー数:<%= user.following.count %></td>
        <td>フォロワー数:<%= user.followers.count %></td>
        <td><%= link_to "Show", user_path(user) %></td>
       </tr>
  
      </tbody>
         <% end %>
         <% else %>
         <p>ユーザーはいません</p>
      <% end %>
    </table>
  </div>
</div>